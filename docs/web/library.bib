file = {:home/cbs/Forschung/Literatur/Artikel/Alle/Jacquey et al. - 2016 - Thermo-poroelastic numerical modelling for enhanced geothermal system performance Case study of the Gro{\ss} Sch{\"{o}}n.pdf:pdf},
issn = {0040-1951},
journal = {Tectonophysics},
keywords = {Enhanced geothermal reservoir,Gro{\ss} Sch{\"{o}}nebeck,Poroelasticity,Thermoelasticity,Transport properties},
pages = {119--130},
title = {{Thermo-poroelastic numerical modelling for enhanced geothermal system performance: Case study of the Gro{\ss} Sch{\"{o}}nebeck reservoir}},
url = {http://www.sciencedirect.com/science/article/pii/S0040195115007015},
