issn = {0148-0227},
journal = {Journal of Geophysical Research},
keywords = {groundwater;numerical model;Wisconsinian glaciatio},
number = {F3},
title = {{Simulating the impact of glaciations on continental groundwater flow systems: 2. Model application to the Wisconsinian glaciation over the Canadian landscape}},
volume = {113},
year = {2008}
}
