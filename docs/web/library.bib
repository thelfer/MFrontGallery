doi = {10.2118/89-pa},
file = {::},
issn = {0149-2136},
journal = {Journal of Petroleum Technology},
month = {sep},
number = {09},
pages = {937--949},
publisher = {Society of Petroleum Engineers (SPE)},
title = {{Widths of Hydraulic Fractures}},
volume = {13},
year = {1961}
}
