doi = {10.1016/j.ijrmms.2005.03.009},
issn = {13651609},
journal = {International Journal of Rock Mechanics and Mining Sciences},
number = {5},
pages = {698--719},
title = {{Approaches to modeling coupled thermal, hydrological, and chemical processes in the drift scale heater test at Yucca Mountain}},
