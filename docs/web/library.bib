journal = {Journal of Geophysical Research: Solid Earth},
keywords = {contact metamorphism,crystalline basement,hydrogeology,metasomatism,mine hydrology,permeability},
number = {3},
pages = {1876--1899},
title = {{Factors controlling the permeability distribution in fault vein zones surrounding granitic intrusions (Ore Mountains/Germany)}},
volume = {122},
year = {2017}
}
