keywords = {Abrasional forms,Basal till,Boulder pavement,Late saalian glaciation,Palaeo-ice stream},
number = {8},
pages = {2699--2717},
publisher = {Springer Berlin Heidelberg},
title = {{Differentiation of subglacial conditions on soft and hard bed settings and implications for ice sheet dynamics: a case study from north-central Poland}},
url = {https://doi.org/10.1007/s00531-020-01920-x},
volume = {109},
year = {2020}
}
